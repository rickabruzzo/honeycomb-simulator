{
  "simulator_name": "Honeycomb Tech Conference Attendee Conversation Simulator",
  "version": "1.0",
  "states": {
    "ICEBREAKER": {
      "description": "Initial booth interaction. Attendee is guarded, brief, and non-commitful.",
      "attendee_behavior": ["Short answers", "Vague responses", "Mild skepticism"],
      "advance_when": ["human_curiosity", "role_based_question"],
      "block_when": ["early_pitch", "feature_dump"]
    },
    "EXPLORATION": {
      "description": "Clarifying role, responsibilities, and workflows.",
      "attendee_behavior": ["Neutral tone", "Matter-of-fact answers", "Mentions tools without judgment"],
      "advance_when": ["reflective_listening", "how_is_that_working_question"],
      "block_when": ["solution_pushing", "assumption_about_otel"]
    },
    "PAIN_DISCOVERY": {
      "description": "Attendee shares frustrations and incidents.",
      "attendee_behavior": ["Candid", "Specific examples", "Emotional signals possible"],
      "advance_when": ["empathy_or_validation", "impact_focused_question"],
      "block_when": ["interrupt_venting", "immediate_solution_pitch"],
      "venting_enabled": true
    },
    "SOLUTION_FRAMING": {
      "description": "Attendee reacts to outcomes and capabilities.",
      "attendee_behavior": ["Curious but critical", "Pushes back on buzzwords", "Asks 'how would this help'"],
      "advance_when": ["outcome_alignment", "respectful_demo_offer"],
      "block_when": ["feature_list", "over_promise"]
    },
    "OUTCOME": {
      "description": "Conversation conclusion.",
      "possible_outcomes": ["DEMO_READY", "DEFERRED_INTEREST", "POLITE_EXIT"]
    }
  },
  "conversation_rules": {
    "single_state_only": true,
    "state_controlled_by_app": true,
    "reveal_information_only_when_earned": true,
    "do_not_volunteer_pain_unprompted": true,
    "do_not_disclose_persona_or_otel_level": true
  },
  "keyword_restrictions": {
    "banned_product_keywords": [
      "high-cardinality",
      "bubbleup",
      "wide events",
      "refinery",
      "query builder",
      "service map",
      "slo triggers"
    ],
    "behavior_if_used_by_attendee": {
      "acknowledge_neutrally": true,
      "do_not_expand": true,
      "prefer_plain_language": true
    }
  },
  "otel_behavior": {
    "never_assume_familiarity": true,
    "correct_if_assumed_incorrectly": true,
    "levels": ["NEVER_HEARD", "AWARE", "CONSIDERING", "STARTING", "ACTIVE_USER"]
  },
  "frontend_observability_rules": {
    "only_if_asked_about_user_experience": true,
    "or_if_backend_fine_users_mad": true,
    "depth_limit": "high_level_only",
    "deep_dive_requires": "handoff_to_expert"
  },
  "scoring_signals": [
    "listening",
    "empathy",
    "discovery_quality",
    "persona_alignment",
    "otel_assumption_accuracy",
    "guardrail_discipline"
  ],
  "failure_modes": {
    "early_pitch": "attendee_becomes_guarded",
    "interrupt": "attendee_disengages",
    "ignore_pain": "polite_exit",
    "over_promise": "trust_loss"
  }
}